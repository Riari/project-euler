{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${relativeFileDirname}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}